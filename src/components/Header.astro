---
import Logo from './Logo.astro'
import { getI18N } from '../i18n/'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<header id='header-nav' class='fixed top-0 z-50 w-screen px-8 py-3 lg:px-0'>
  <div class='mx-auto grid max-w-7xl grid-cols-3 items-center justify-between'>
    <a href='/' class='col-span-1'>
      <Logo class='h-auto w-10' />
    </a>
    <nav class='col-span-1 justify-self-center'>
      <ul class='flex gap-4'>
        <li><a class='text__glowing' href='/info'>{i18n.HEADER_1}</a></li>
        <li><a class='text__glowing' href='/archivo'>{i18n.HEADER_2}</a></li>
      </ul>
    </nav>
    <a
      href='#'
      class='inline-block justify-self-end rounded-full border border-white px-4 py-2 duration-300 hover:bg-white hover:text-black'
    >
      {i18n.HEADER_BUTTON}
    </a>
  </div>
</header>
