---
import { getI18N } from '@/i18n/'
import Button from './Button.astro'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<div class='relative h-[80vh] w-full max-w-[100vw] md:aspect-video md:h-full'>
  <div
    class='absolute left-1/2 right-0 top-14 z-10 m-auto flex -translate-x-1/2 flex-col items-center'
  >
    <img
      class='block aspect-[343/243] w-full'
      alt={i18n.VIDEO_ALT}
      src='/logo-home.svg'
    />
    <Button url='https://www.youtube.com/watch?v=1YmpPrqKP-g'>
      {i18n.VIDEO_BUTTON}
    </Button>
  </div>

  <video
    class='cp-v h-full w-full animate-fade object-cover object-top animate-duration-1000 animate-ease-in-out'
    src='/video.webm'
    autoplay
    loop
    muted></video>
  <video
    class='absolute -bottom-48 -z-40 blur-3xl'
    src='/video.webm'
    autoplay
    loop
    muted></video>
</div>

<style>
  @font-face {
    font-family: 'Tomaso';
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src:url('/fonts/tomaso.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Jura';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/fonts/jura.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
</style>
